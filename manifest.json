{
  "manifest_version": 3,
  "name": "Claude Usage Tracker",
  "version": "1.0.0",
  "description": "Track your Claude.ai usage limits with real-time progress bars",
  "permissions": ["cookies", "alarms", "storage", "notifications"],
  "host_permissions": ["https://claude.ai/*"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    },
    "default_title": "Claude Usage Tracker"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
